#!/usr/bin/haserl 
<%


case $GET_func in
  status)
	ndsctl status
	;;
  clients)
  	ntsctl clients
  	;;
  auth)
	ndsctl auth $ip
	;;
  deauth)
	ndsctl deauth $mac_ip
	;;
  block)
  	ndsctl block $mac
  	;;
  unblock)
  	ndsctl unblock $mac 
  	;;
  allow)
	ndsctl allow $mac
	;;
  unallow)
	ndsctl unallow $mac                                                                      
	;;
  trust)
  
                    trust mac         Trust the given MAC address
                      untrust mac       Untrust the given MAC address
                        loglevel n        Set logging level to n
                          password pass     Set gateway password
                            username name     Set gateway username
  get_nodogsplash_macs)
    ;;
  ndsctl_status)
    ndsctl status
    ;;
  apply_firmware)
    if [ -n $HASERL_firmware_path ]; then
        sysupgrade -n $HASERL_firmware_path
    fi
    #cat $HASERL_uploadfile_path | wc -c
    ;;
esac
%>
