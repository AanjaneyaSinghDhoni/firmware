#!/usr/bin/haserl 
<%

case $POST_func in
  get_status)
    ndsctl status
    ;;
  clients)
    ntsctl clients
    ;;
  auth)
    ndsctl auth $POST_mac
    ;;
  deauth)
    ndsctl deauth $POST_mac
    ;;
  block)
    ndsctl block $POST_mac
    ;;
  unblock)
    ndsctl unblock $POST_mac 
    ;;
  allow)
    ndsctl allow $POST_mac
    ;;
  unallow)
    ndsctl unallow $POST_mac                                                                      
    ;;
  *)
    echo "(E) nodogsplash: Invalid command: '$POST_func'"
    ;;
esac
%>
