#!/usr/bin/haserl
<%

pass1="$POST_pass1"
pass2="$POST_pass2"

if [ -z "$pass1" ]; then
  echo "(E) Password is empty!"
elif [ "$pass1" = "$pass2" ]; then
  (echo "$pass1"; sleep 1; echo "$pass2") | passwd &> /dev/null
  if [ $? = 0 ]; then
    echo "(I) Password set!"
  else
    echo "(I) Something failed!"
  fi
else
  echo "(E) Passwords not equal!"
fi

%>
