#!/usr/bin/haserl
<%

case $POST_func in
  apply_firmware)
    fpath="$HASERL_firmware_path"
    if [ -a $fpath ]; then
        /etc/init.d/batmna-adv/stop &> /dev/null
        /etc/init.d/nodogsplash stop &> /dev/null
        /etc/init.d/hotplug2 stop &> /dev/null
        echo "(I) Start sysupgrade..."
        sysupgrade -n $fpath
    else
        echo "(E) Cannot find file '$fpath'."
    fi
    ;;
esac
%>
