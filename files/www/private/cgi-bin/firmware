#!/usr/bin/haserl --upload-dir=/tmp --upload-limit=6000
<%
path="$POST_firmware"
keep_config="$POST_keep_config"

if [ -e "$path" ]; then
    echo "(I) Start sysupgrade..."
    if [ "$keep_config" = "yes" ]; then
        args="-c"
    else
        args="-n"
    fi
    sysupgrade $args $path
else
    echo "(E) firmware: Cannot find file '$path'."
fi
%>
