#!/bin/sh
#solves MTU problem with bad ISPÂ´s
iptables -A FORWARD -p tcp -m tcp --tcp-flags SYN,RST SYN -j TCPMSS --clamp-mss-to-pmtu


#clear ebtables
ebtables -F
ebtables -X

#drop all IPv4 related traffic from bat0
ebtables -A INPUT --logical-in br-public -i bat0 -p ! IPv6 -j DROP
ebtables -A OUTPUT --logical-out br-public -o bat0 -p ! IPv6 -j DROP
