config wifi-device  wifi0
        option type     atheros
        option channel 1

config wifi-iface
        option device   wifi0
        option mode     adhoc
        option ssid     batman.freifunk-bielefeld.de
        option bssid    DE:AD:CA:FE:BA:BE
        option hidden   1

config wifi-iface
        option device   wifi0
        option mode     ap
        option network  lan
        option ssid     www.freifunk-bielefeld.de
