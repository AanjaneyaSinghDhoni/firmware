config dnsmasq
	option domainneeded '1'
	option boguspriv '1'
	option filterwin2k '0'
	option localise_queries '1'
	option rebind_protection '1'
	option rebind_localhost '1'
	option local '/lan/'
	option domain 'lan'
	option expandhosts '1'
	option nonegcache '0'
	option authoritative '1'
	option readethers '1'
	option leasefile '/tmp/dhcp.leases'
	option resolvfile '/tmp/resolv.conf.auto'
	#prevent own hostname as DNS entry
	option add_local_domain '0'
	option add_local_hostname '0'
	option cachelocal '0'

config odhcpd 'odhcpd'
	option maindhcp '0'
	option leasefile '/tmp/hosts/odhcpd'
	option leasetrigger '/usr/sbin/odhcpd-update'

config dhcp private
	option interface private
	option start 100
	option limit 150
	option leasetime 2h
	list dhcp_option '3,192.168.133.1'
	list dhcp_option '6,192.168.133.1'
	option ra relay
	option ndp relay

config dhcp public
	option interface public
	option start 100
	option limit 150
	option leasetime 2h
	list dhcp_option '3' #no gateway!
	list dhcp_option '6,192.168.132.1'
	option ra relay
	option ndp relay
	option master 1

config dhcp wan
	option interface wan
	option ignore 1
